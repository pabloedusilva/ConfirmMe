@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "_LoginLayout";
}

<div class="container" style="text-align: center; padding: 4rem 1rem;">
    <div class="access-denied-content">
        <i class="fas fa-lock" style="font-size: 4rem; color: var(--error-color); margin-bottom: 1rem;"></i>
        <h1 style="color: var(--error-color); margin-bottom: 1rem;">Acesso Negado</h1>
        <p style="color: var(--text-light); margin-bottom: 2rem;">
            Você não tem permissão para acessar esta página.
        </p>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="/Auth/Login" class="btn primary">
                <i class="fas fa-sign-in-alt"></i>
                Fazer Login
            </a>
            <a href="/" class="btn secondary">
                <i class="fas fa-home"></i>
                Ir para Início
            </a>
        </div>
    </div>
</div>
